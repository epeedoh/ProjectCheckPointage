<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectCheckPointage.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProjectCheckPointage.Mobile.Views"
    Title="ProjectCheckPointage.Mobile" Shell.NavBarIsVisible="False"
     Shell.FlyoutBehavior="Disabled">
  
    <ShellContent Route="ConnexionPage"
                  ContentTemplate="{DataTemplate local:ConnexionPage}" />

    <TabBar>
        <Shell.NavBarIsVisible>false</Shell.NavBarIsVisible>

        <ShellContent Title="Accueil" Icon="home.png" ContentTemplate="{DataTemplate local:DashboardPromoteurPage}" />
        <ShellContent Title="Dashboard Superviseur" Icon="home.png" ContentTemplate="{DataTemplate local:DashboardSuperviseurPage}" />
    
        <ShellContent Title="QR" Icon="qr.png" ContentTemplate="{DataTemplate local:ScanQRCodePage}" />
        <ShellContent Title="Profil" Icon="profile.png" ContentTemplate="{DataTemplate local:AccueilSuperviseurPage}" />
    </TabBar>

</Shell>
